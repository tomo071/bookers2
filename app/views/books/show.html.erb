<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @books.user.get_profile_image %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @books.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @books.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@books.user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @newbook do |f| %>
      <div class="form-group">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label>Opinion</label>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success"%>
      </div>
      <% end %>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@books.user.id) do %>
                <%= image_tag @books.user.get_profile_image %>
                <%= @books.user.name %>
                <% end %>
              </td>
              <td><%= @books.title %></td>
              <td><%= @books.body %></td>
              <% if @books.user.id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@books), method: :delete, class:"btn btn-sm btn-danger" %>
              </td>
              <% end %>
            </tr>
          </tbody>

        </table>

    </div>
  </div>
</div>

